<div class="main-container" id="custom-target">
	<div class="form-container hide">
		<div class="form">
			<div class="title">Nuevo producto</div>
			<div class="subtitle">Agreguemos un nuevo producto!</div>
			<div class="input-container ic1">
				<input id="title" class="input" type="text" placeholder=" " />
				<div class="cut"></div>
				<label for="title" class="placeholder">Producto</label>
			</div>
			<div class="input-container ic2">
				<input id="description" class="input" type="text" placeholder=" " />
				<div class="cut cut-large"></div>
				<label for="description" class="placeholder">Descripción</label>
			</div>
			<div class="input-container ic2">
				<input id="category" class="input" type="text" placeholder=" " />
				<div class="cut"></div>
				<label for="category" class="placeholder">Categoría</>
			</div>
			<div class="input-container ic2">
				<input id="code" class="input" type="text" placeholder=" " />
				<div class="cut cut-middle"></div>
				<label for="code" class="placeholder">Código</>
			</div>
			<div class="input-container ic2">
				<input id="price" class="input" type="text" placeholder=" " />
				<div class="cut cut-middle"></div>
				<label for="price" class="placeholder">Precio</>
			</div>
			<div class="input-container ic2">
				<input id="stock" class="input" type="text" placeholder=" " />
				<div class="cut cut-short"></div>
				<label for="stock" class="placeholder">Stock</>
			</div>
			<div class="input-container ic2">
				<input id="thumbnails" class="input" type="text" placeholder=" " />
				<div class="cut"></div>
				<label for="thumbnails" class="placeholder">Imágenes</>
			</div>
			<button type="text" class="submit">Agregar</button>
    	</div>
	</div>
	<div class="products-main-container">
	<div class="list-header">
		<div class="title">LISTA DE PRODUCTOS</div>
		<div class="add-btn">Agregar</div>
	</div>
		<div class="list-container">
			<ul class="product-list">
				{{#each products}}
					<li id={{this.id}}>
						<div class="list-item-group">
							<div class="list-item">
								<b>Id:</b>
								{{this.id}}
								-
								<b>Título:</b>
								{{this.title}}
								-
								<b>Categoría:</b>
								{{this.category}}
								-
								<b>Código:</b>
								{{this.code}}
							</div>
							<div class="delete-btn">Borrar</div>
						</div>
						{{#each this.thumbnails}}
							<img class="thumbnail" src="{{this}}" />
						{{/each}}
					</li>
				{{else}}
					<div class="no-products">No products loaded!</div>
				{{/each}}
			</ul>
		</div>
	</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>